<%- include('../includes/head.ejs') %>
    <%- include('../includes/navbar.ejs') %>

    <br><br>

    <div class="container col-md-3 text-center border border-top-0 shadow p-3 mb-5 bg-body rounded">
		<form class="sm-6" action="/new-password" method="POST">
              <div class="form-floating mb-3">
                <h1> Password Reset </h1>
              </div>
              <% if (errorMessage) { %>
                <div class="user-message user-message--error"><%= errorMessage %></div>
            <% } %>
              <div class="form-floating mb-3">
                <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword">Password</label>
              </div>
              <div class="form-floating mb-3">
                <input type="hidden" name="userId" value="<%= userId %>">
                <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button type="submit" class="btn btn-primary">Update Password</button>
              </div>     
		</form>
	</div>	
  
  <div class="footer fixed-bottom text-dark text-center border border-top-1" >
      2021
  </div>
<%- include('../includes/end.ejs') %>