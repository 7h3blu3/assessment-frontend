<%- include('../includes/head.ejs') %>
<%- include('../includes/navbar.ejs') %>

<div class="container col-md-8">
    
    <form action="/users/Assessment/<%= user.id %>" name="/submit-scenario" method="POST">
        <div class="invisible"><input readonly name="user_submit_title" type="text" class="form-control" name="score" value="<%= user.submittedTests %>" placeholder="<%= user.submittedTests %>"></div>
        <div class="mb-3"></label>
        </div>
        <div class="mb-3">

            <textarea readonly class="form-control" id="exampleFormControlTextarea1" name="user_submit_scenario" rows="12"><%= user.submittedTests.toString().replace(/,/g,'\r\n' ) %></textarea>
        </div>
        <div class="mb-3">

            <textarea class="form-control" id="exampleFormControlTextarea1" name="user_submit_scenario_input" placeholder="Write your comments here" rows="6"><%= user.submittedTests.toString().split(/,/g,'\r\n') %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<%- include('../includes/end.ejs') %>