<%- include('../includes/head.ejs') %>
<%- include('../includes/navbar.ejs') %>

<div class="jumbotron">
  <h1 class="text-center">Edit Users</h1>      
  </div>
    <div class="container col-md-10">

<form action="/admin/edit-users" method="POST">
    <div class="form-group row">
      <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
      <div class="col-sm-10">
        <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="<%=user.email %>"readonly>
      </div>
    </div>
    <div class="form-group row">
        <label for="userType"  class="col-sm-2 col-form-label">User Type</label>
        <div class="col-sm-10">
        <select class="form-control" name='userType' id="userType" >
          <option>User</option>
          <option>Reviewer</option>
          <option>Admin</option>
          <option>Content Manager</option>
        </select>
        </div>
      </div>
      <div class="form-group row">
        <label for="userLevel"  class="col-sm-2 col-form-label">User level</label>
        <div class="col-sm-10">
        <select class="form-control" name='level' id="level" >
          <option>Professional</option>
          <option>Experienced</option>
          <option></option>
        </select>
        </div>
      </div>
      <div class="form-group row">
        <label for="mission"  class="col-sm-2 col-form-label">User Mission</label>
        <div class="col-sm-10">
          <select class="form-select col-md" name="mission" placeholder="Mission">
            <% filteredMissions.forEach(function(mission) { %>
                <option><%= mission %></option>
                <% }); %>
                <option></option>
         </select>
        </div>
      </div>
      <input type="hidden" value="<%= user._id %>" name="userId">
      <button type="submit" class="btn btn-primary">Submit</button>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  </form>
</div>
<%- include('../includes/end.ejs') %>